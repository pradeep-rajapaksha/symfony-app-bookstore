{% extends '::base.html.twig' %}

{% block body -%}
    <h4 class="mt-5 mb-5">Category
        <a href="{{ path('category') }}" class="float-right btn btn-sm btn-secondary">Back to the list</a>
    </h4>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <td>
                    <a href="{{ path('category_edit', { 'id': entity.id }) }}" class="btn btn-secondary mb-2">Edit</a>
                    {{ form(delete_form) }}
                </td>
            </tr>
        </tbody>
    </table>

{% endblock %}